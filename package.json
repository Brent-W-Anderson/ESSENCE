{
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "lint": "concurrently \"yarn lint:js\" \"yarn lint:styles\"",
        "lint:fix": "concurrently \"yarn lint:js:fix\" \"yarn lint:styles:fix\"",
        "lint:js": "eslint **/src/**/*.{js,jsx,ts,tsx} --config .eslintrc.config.cjs",
        "lint:js:fix": "eslint **/src/**/*.{js,jsx,ts,tsx} --fix --config .eslintrc.config.cjs",
        "lint:styles": "stylelint **/src/**/*.scss --config .stylelintrc",
        "lint:styles:fix": "stylelint **/src/**/*.scss --fix --config .stylelintrc"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "eslint": "^9.5.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-solid": "^0.14.0",
        "prettier": "^3.3.2",
        "stylelint": "^16.6.1",
        "stylelint-config-standard-scss": "^13.1.0",
        "concurrently": "^8.2.2",
        "typescript": "^5.4.5"
    }
}